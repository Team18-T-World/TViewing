<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.tworld.tviewing.home.HomeFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_main_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#111111"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/home_sub_menu_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_sub_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#111111"
        app:layout_constraintBottom_toTopOf="@+id/home_video_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_main_menu_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_video_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1F1F1F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_sub_menu_list" />


</androidx.constraintlayout.widget.ConstraintLayout>

